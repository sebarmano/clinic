<div id="flash">
  <% flash.each do |key, value| %>
    <div class="rounded-md bg-<%= flash_class(key) %>-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <!-- Heroicon name: solid/check-circle -->
          <svg class="h-5 w-5 text-<%= flash_class(key) %>-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <%= tag "path",  "fill-rule" => "evenodd", "d" => flash_icon_path(key), "clip-rule" => "evenodd" %>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-<%= flash_class(key) %>-800">
          <%= value %>
          </p>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button type="button" class="inline-flex bg-<%= flash_class(key) %>-50 rounded-md p-1.5 text-<%= flash_class(key) %>-500 hover:bg-<%= flash_class(key) %>-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-<%= flash_class(key) %>-50 focus:ring-<%= flash_class(key) %>-600">
              <span class="sr-only">Dismiss</span>
              <!-- Heroicon name: solid/x -->
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

